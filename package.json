{
  "name": "mon-projet-fullstack",
  "version": "1.0.0",
  "description": "Projet fullstack avec Next.js, Express et MySQL",
  "scripts": {
    "client": "cd client && npm run dev",
    "server": "cd server && npm run dev",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "preinstall": "npm install -g husky",
    "install-all": "npm install && npx husky install && cd client && npm install && cd ../server && npm install",
    "format": "biome format --write .",
    "lint": "biome check .",
    "lint:fix": "biome check --apply .",
    "prepare": "husky"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.5.3",
    "concurrently": "^8.2.2",
    "husky": "^9.0.0",
    "lint-staged": "^15.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "biome format --write",
      "biome check --apply --no-errors-on-unmatched"
    ]
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.0.8",
    "tailwindcss": "^4.0.8"
  }
}
